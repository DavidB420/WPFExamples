<Window x:Class="WPFBindingExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBindingExample"
        mc:Ignorable="d"
        Title="Test Window" Height="450" Width="800">
    <Grid>
        <Label Content="{Binding ElementName=ATextBox, Path=Text }" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="24" Width="780"/>
        <Button Content="{Binding  TestString}" HorizontalAlignment="Left" Margin="337,206,0,0" VerticalAlignment="Top" Height="89" Width="152"/>
        <TextBox Name="ATextBox" HorizontalAlignment="Center" Margin="0,106,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="780"/>

    </Grid>
</Window>
